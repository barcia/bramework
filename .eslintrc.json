{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "scripta"
    },
    "rules": {
        "indent": [ "warn", 2 ],
        "linebreak-style": [ "error", "unix" ],
        "quotes": [ "warn", "single" ],
        "semi": [ "error", "always" ]
    }
}
