{
	"mode": "html",

	"string": {
		"key": "_",
		"original": "bramework",
		"replace": "theme_name"
	},

	"task": {
		"all": "build",
		"stuff": "stuff",
		"html": "html",
		"wp": "wp",
		"css": "css",
		"js": "js",
		"docs": {
			"all": "docs",
			"css": "css:docs"
		}
	},

	"path": {
		"src": "src/",
		"srcStuff": "src/stuff/",
		"srcHtml": "src/html/",
		"srcWp": "src/wordpress/",
		"srcScss": "src/scss/",
		"srcJs": "src/js/",
		"srcSvg": "src/svg/",

		"build": "build/",
		"buildAssets": "build/assets/",

		"dist": "dist/",
		"distAssets": "dist/assets/",

		"docs": "docs/",
		"docsScss": "docs/sass/",

		"sourcemap": "."
	},

	"browserSync": {
		"proxyURL": "localhost:8080",
		"serverRoot": "dist/",
		"browser": "google chrome"
	},

	"html": {
		"data": "data.json"
	},

	"postCss": {
		"autoprefixer": {
			"browsers": "> 5%"
		},
		"cssnano": {
			"autoprefixer": false,
			"safe": true,
			"sourcemap": false
		}
	}
}
