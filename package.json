{
	"name": "bramework",
	"version": "1.0.0",
	"description": "A web starter kit",
	"homepage": "http://barcia.github.io/bramework",
	"repository": {
		"type": "git",
		"url": "https://github.com/barcia/bramework.git"
	},
	"author": {
		"name": "IvÃ¡n Barcia",
		"email": "ivan@barcia.gal",
		"url": "https://barcia.gal"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/barcia/bramework/issues"
	},
	"scripts": {
		"clean": "rm -rf dist/* & mkdir -p dist/assets/",
		"css-sass-build": "node-sass --output-style compressed --error-bell src/assets/scss/style.scss dist/assets/style.css --include-path 'node_modules/'",
		"css-sass-dev": "node-sass --output-style expanded --error-bell --source-comments true --source-map-embed true --source-map-contents true src/assets/scss/style.scss dist/assets/style.css --include-path 'node_modules/'",
		"css-postcss-build": "postcss --no-map --use autoprefixer --replace dist/assets/style.css",
		"css-postcss-dev": "postcss --use autoprefixer --replace dist/assets/style.css",
		"css-build": "run-s css-sass-build css-postcss-build",
		"css-dev": "run-s css-sass-dev css-postcss-dev",
		"js-browserify-build": "browserify src/assets/js/script.js --outfile dist/assets/script.js",
		"js-browserify-dev": "browserify --debug src/assets/js/script.js --outfile dist/assets/script.js",
		"js-uglify": "uglifyjs dist/assets/script.js --mangle --compress  --output dist/assets/script.js",
		"js-build": "run-s js-browserify-build js-uglify",
		"js-dev": "run-s js-browserify-dev",
		"html-build": "cpx 'src/html/**/*.html' dist/",
		"wp-build": "cpx 'src/wp/**/*.{php,pot,css,png}' dist/",
		"img-build": "cpx 'src/assets/img/**/*.{svg,jpg,jpeg,png,webp,gif,ico}' dist/assets/img/",
		"build:css": "run-s css-build",
		"build:js": "run-s js-build",
		"build:html": "run-s clean build:css build:js img-build html-build",
		"build:wp": "run-s clean build:css build:js img-build wp-build",
		"dev:css": "run-s css-dev",
		"dev:js": "run-s js-dev",
		"dev:html": "npm run clean && run-p watch:css watch:js watch:html watch:assets serve:html",
		"dev:wp": "npm run clean && run-p watch:css watch:js watch:wp watch:assets serve:wp",
		"watch:css": "nodemon --watch src/assets/scss --ext scss --exec 'npm run css-dev'",
		"watch:js": "nodemon --watch src/assets/js --ext js --exec 'npm run js-dev'",
		"watch:html": "npm run html-build -- --watch",
		"watch:wp": "npm run wp-build -- --watch",
		"watch:assets": "npm run img-build -- --watch",
		"serve:html": "browser-sync start --server './dist/' --browser 'google chrome' --watch --files 'dist/assets/style.css, dist/assets/script.js, dist/**/*.html'",
		"serve:wp": "browser-sync start --proxy 'localhost:8080' --browser 'google chrome' --watch --files 'dist/assets/style.css, dist/assets/script.js, dist/**/*.php'",
		"export:wp": "cpx 'dist/**/*' /Users/ivan/Developer/wp/wordpress/wp-content/themes/wololoo --watch"
	},
	"dependencies": {},
	"devDependencies": {
		"autoprefixer": "^8.6.2",
		"browser-sync": "^2.24.4",
		"browserify": "^16.2.2",
		"cpx": "^1.5.0",
		"eslint": "^5.2.0",
		"node-sass": "^4.9.2",
		"nodemon": "^1.18.3",
		"npm-run-all": "^4.1.3",
		"postcss-cli": "^5.0.0",
		"sass-lint": "^1.12.1",
		"standarize": "^0.3.3",
		"uglify-es": "^3.3.9"
	},
	"browserslist": [
		"> 5%",
		"last 1 major version"
	],
	"sasslintConfig": "src/assets/scss/.sass-lint.yml"
}
