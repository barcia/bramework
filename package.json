{
	"name": "bramework",
	"version": "1.0.0",
	"description": "A web starter kit",
	"homepage": "http://barcia.github.io/bramework",
	"repository": {
		"type": "git",
		"url": "https://github.com/barcia/bramework.git"
	},
	"author": {
		"name": "IvÃ¡n Barcia",
		"email": "ivan@barcia.gal",
		"url": "https://barcia.gal"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/barcia/bramework/issues"
	},
	"scripts": {
		"css": "node-sass --output-style compressed --source-map true --source-map-contents true src/scss/style.scss dist/assets/style.min.css",
		"postcss": "postcss -u autoprefixer -r dist/assets/style.min.css",
		"build:css": "npm run css && npm run postcss",
		"build:js": "mkdir -p dist/assets && uglifyjs src/js/*.js -m -o dist/assets/script.min.js",
		"build:html": "cp -r src/html/* dist/",
		"watch:css": "onchange 'src/scss/**/*.scss' -- npm run build:css",
		"watch:js": "onchange 'src/js/**/*.js' -- npm run build:js",
		"watch:html": "onchange 'src/html/**/*.html' -- npm run build:html",
		"watch": "run-p -s watch:css watch:js watch:html",
		"serve": "browser-sync start --server 'dist/' --browser 'google chrome' --files 'dist/assets/style.min.css, dist/assets/script.min.js, dist/*.html'",
		"prestart": "run-s -s build:css build:js build:html",
		"start": "run-p -s serve watch:css watch:js watch:html"
	},
	"dependencies": {},
	"devDependencies": {
		"autoprefixer": "^8.6.2",
		"browser-sync": "^2.24.4",
		"node-sass": "^4.9.0",
		"npm-run-all": "^4.1.3",
		"onchange": "^4.0.0",
		"postcss-cli": "^5.0.0",
		"uglify-es": "^3.3.9"
	},
	"browserslist": [
		"> 5%",
		"last 1 major version"
	],
	"sasslintConfig": "/src/scss/.sass-lint.yml"
}
