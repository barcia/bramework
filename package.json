{
	"name": "bramework",
	"version": "1.0.0",
	"description": "A web starter kit",
	"homepage": "http://barcia.github.io/bramework",
	"repository": {
		"type": "git",
		"url": "https://github.com/barcia/bramework.git"
	},
	"author": {
		"name": "IvÃ¡n Barcia",
		"email": "ivan@barcia.gal",
		"url": "https://barcia.gal"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/barcia/bramework/issues"
	},
	"scripts": {
		"clean": "rm -rf dist && mkdir -p dist/assets/",
		"sass": "node-sass --output-style compressed --error-bell src/scss/style.scss dist/assets/style.css --include-path 'node_modules/'",
		"sass:dev": "node-sass --output-style expanded --error-bell --source-comments true --source-map-embed true --source-map-contents true src/scss/style.scss dist/assets/style.css --include-path 'node_modules/'",
		"postcss": "postcss --no-map --use autoprefixer --replace dist/assets/style.css",
		"postcss:dev": "postcss --use autoprefixer --replace dist/assets/style.css",
		"stylelint": "stylelint 'src/scss/**/*.scss' --config '.stylelintrc' --cache -f verbose > sasslint.log || echo \"ðŸ’¥ lint fail for some file(s)\nðŸ“„ See $(pwd)/sasslint.log\"",
		"browserify": "browserify src/js/script.js --outfile dist/assets/script.js",
		"browserify:dev": "browserify --debug src/js/script.js --outfile dist/assets/script.js",
		"uglify": "uglifyjs dist/assets/script.js --mangle --compress  --output dist/assets/script.js",
		"build:css": "run-s sass postcss",
		"build:css:dev": "run-s sass:dev postcss:dev",
		"build:js": "run-s browserify uglify",
		"build:js:dev": "run-s browserify:dev",
		"build:web": "cpx 'src/web/**/*' dist/",
		"build": "run-s clean build:css build:js build:web",
		"watch:css": "nodemon --watch src/scss --ext scss --exec 'npm run build:css:dev'",
		"watch:js": "nodemon --watch src/js --ext js --exec 'npm run build:js:dev'",
		"watch:web": "npm run build:web -- --watch",
		"server": "browser-sync start --server './dist/' --browser 'firefox developer edition' --watch --files 'dist/**/*'",
		"server:wp": "browser-sync start --proxy 'localhost:8080' --browser 'firefox developer edition' --watch --files 'dist/**/*'",
		"dev": "npm run clean && run-p watch:css watch:js watch:web server",
		"dev:wp": "npm run clean && run-p watch:css watch:js watch:web server:wp",
		"docs": "cpx 'dist/assets/{style.css,script.js}' docs/assets",
		"lint": "npm run stylelint",
		"zip": "npm run build && sh .zip.sh"
	},
	"dependencies": {},
	"devDependencies": {
		"autoprefixer": "^9.1.5",
		"browser-sync": "^2.24.7",
		"browserify": "^16.2.3",
		"browserslist": "^4.1.1",
		"cpx": "^1.5.0",
		"eslint": "^5.6.1",
		"node-sass": "^4.9.3",
		"nodemon": "^1.18.4",
		"npm-run-all": "^4.1.3",
		"postcss-cli": "^6.0.0",
		"standarize": "^1.1.0",
		"stylelint": "^9.6.0",
		"stylelint-config-recommended": "^2.1.0",
		"stylelint-order": "^1.0.0",
		"stylelint-scss": "^3.3.1",
		"uglify-es": "^3.3.9"
	}
}
