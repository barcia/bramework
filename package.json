{
	"name": "bramework",
	"version": "1.0.0",
	"description": "A web starter kit",
	"homepage": "http://barcia.github.io/bramework",
	"repository": {
		"type": "git",
		"url": "https://github.com/barcia/bramework.git"
	},
	"author": {
		"name": "IvÃ¡n Barcia",
		"email": "ivan@barcia.gal",
		"url": "https://barcia.gal"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/barcia/bramework/issues"
	},
	"scripts": {
		"clean": "rm -rf dist/* & mkdir -p dist/assets/",
		"css-build": "node-sass --output-style compressed src/assets/scss/style.scss dist/assets/style.css --include-path 'node_modules/'",
		"css-dev": "node-sass --output-style expanded --source-comments true --source-map-embed true --source-map-contents true src/assets/scss/style.scss dist/assets/style.css --include-path 'node_modules/'",
		"css-postcss": "postcss --use autoprefixer --replace dist/assets/style.css",
		"js-build": "browserify src/assets/js/script.js --outfile dist/assets/script.js",
		"js-dev": "browserify --debug src/assets/js/script.js --outfile dist/assets/script.js",
		"js-uglify": "uglifyjs dist/assets/script.js --mangle --compress  --output dist/assets/script.js",
		"html-cp": "cp -r src/html/* dist/",
		"html-rm": "find dist/ -name '*.html' -type f -delete & find dist/ -type d -empty -delete",
		"prebuild": "npm run clean",
		"build:css": "run-s css-build css-postcss",
		"build:js": "run-s js-build js-uglify",
		"build:html": "run-s html-rm html-cp",
		"build": "run-s build:*",
		"predev": "npm run clean",
		"dev:css": "run-s css-dev css-postcss",
		"dev:js": "run-s js-dev",
		"dev": "run-p serve watch",
		"watch:css": "nodemon --watch src/assets/scss --ext scss --exec \"npm run dev:css\"",
		"watch:js": "nodemon --watch src/assets/js --ext js --exec 'npm run dev:js'",
		"watch:html": "nodemon --watch src/html --ext html --exec 'npm run build:html'",
		"watch": "run-p watch:*",
		"serve": "browser-sync start --server 'dist/' --browser 'google chrome' --watch --files 'dist/assets/style.css, dist/assets/script.js, dist/*.html'"
	},
	"dependencies": {},
	"devDependencies": {
		"autoprefixer": "^8.6.2",
		"browser-sync": "^2.24.4",
		"browserify": "^16.2.2",
		"eslint": "^5.2.0",
		"node-sass": "^4.9.2",
		"nodemon": "^1.18.3",
		"npm-run-all": "^4.1.3",
		"postcss-cli": "^5.0.0",
		"sass-lint": "^1.12.1",
		"standarize": "^0.1.4",
		"uglify-es": "^3.3.9"
	},
	"browserslist": [
		"> 5%",
		"last 1 major version"
	],
	"sasslintConfig": "src/assets/scss/.sass-lint.yml"
}
