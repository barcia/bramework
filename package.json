{
	"name": "bramework",
	"version": "1.0.0",
	"license": "MIT",
	"description": "A web starter kit",
	"homepage": "http://barcia.github.io/bramework",
	"repository": "https://github.com/barcia/bramework",
	"bugs": "https://github.com/barcia/bramework/issues",
	"private": true,
	"author": {
		"name": "IvÃ¡n Barcia",
		"email": "ivan@barcia.gal",
		"url": "https://barcia.gal"
	},
	"scripts": {
		"clean": "rm -rf dist/*",
		"sass": "node-sass --output-style compressed --error-bell src/scss/style.scss dist/assets/style.css --include-path 'node_modules/'",
		"sass:dev": "node-sass --output-style expanded --error-bell --source-comments true --source-map-embed true --source-map-contents true src/scss/style.scss dist/assets/style.css --include-path 'node_modules/'",
		"postcss": "postcss --no-map --use autoprefixer --replace dist/assets/style.css",
		"postcss:dev": "postcss --use autoprefixer --replace dist/assets/style.css",
		"webpack": "webpack --config webpack.config.js --mode=production",
		"webpack:dev": "webpack --config webpack.config.js --mode=development",
		"css": "npm run sass && npm run postcss",
		"css:dev": "npm run sass:dev && npm run postcss:dev",
		"js": "npm run webpack",
		"js:dev": "npm run webpack:dev",
		"web": "cpx 'src/web/**/*' dist/",
		"build": "npm run clean && npm run css; npm run js; npm run web",
		"build:dev": "npm run clean && npm run css:dev; npm run js:dev; npm run web",
		"postbuild": "npm run docs",
		"watch:css": "chokidar 'src/scss/**/*.scss' --initial -c 'npm run css:dev'",
		"watch:js": "chokidar 'src/js/**/*.js' --initial -c 'npm run js:dev'",
		"watch:web": "npm run web -- --watch",
		"server": "browser-sync start --server './dist/' --browser 'firefox developer edition' --watch --files 'dist/**/*'",
		"server:wp": "browser-sync start --proxy 'localhost:8080' --browser 'firefox developer edition' --watch --files 'dist/**/*'",
		"start": "npm run clean && npm run watch:css & npm run watch:js & npm run watch:web & npm run server",
		"docs": "cpx 'dist/assets/{style.css,script.js}' docs/assets",
		"stylelint": "stylelint 'src/scss/**/*.scss' --config '.stylelintrc' --cache -f verbose > sasslint.log || echo \"ðŸ’¥ lint fail for some file(s)\nðŸ“„ See $(pwd)/sasslint.log\"",
		"eslint": "eslint 'src/js/**/*.js' --cache --format 'compact' --output-file 'eslint.log'",
		"lint": "npm run stylelint; npm run eslint"
	},
	"dependencies": {},
	"devDependencies": {
		"autoprefixer": "^9.4.3",
		"browser-sync": "^2.26.3",
		"browserslist": "^4.3.7",
		"chokidar-cli": "^1.2.1",
		"cpx": "^1.5.0",
		"eslint": "^5.11.1",
		"node-sass": "^4.11.0",
		"postcss-cli": "^6.1.0",
		"standarize": "^1.1.0",
		"stylelint": "^9.9.0",
		"stylelint-config-recommended": "^2.1.0",
		"stylelint-order": "^2.0.0",
		"stylelint-scss": "^3.4.4",
		"webpack": "^4.28.3",
		"webpack-cli": "^3.1.2"
	}
}
