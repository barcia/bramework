# editorconfig.org
# File to maintain consistent coding styles
# https://gist.github.com/barcia/ae9a98077e7def47e7946e573bdcecdc


root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{html,php,xml,css,scss,sass,less,js}]
indent_size = 2

[*.{json,yaml}]
indent_size = 4

[*.{txt,md,markdown}]
indent_size = 2
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[*.{sh,bash}]
indent_size = 4
