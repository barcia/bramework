# editorconfig.org

root = true

[*]
charset = utf-8
indent_style = tab
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{html,pug,php,xml,css,scss,sass,less,js}]
indent_size = 2

[*.{json}]
indent_size = 4

[*.{yaml,yml}]
indent_style = space
indent_size = 4

[*.{txt,md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[*.{sh,bash,zsh}]
indent_size = 4
